/* pages/search/search.wxss */
.container{
  display: flex;
  /* height:  150px; */
  background-color: rgba(255,97,0,0.7);
  padding: 0px 0px 20px 0px;
  align-items: left;
  justify-content: left; 
}

.search{
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 10px 10px;
  background: #FF6100; 
  width: 100%; 
  /* flex: 1; */
  box-sizing: border-box;
}

.search-input{
  font-size: 12px;
  color: #333;
  background-color: #fff;
  border-radius: 30px;
  margin:0 10px 0 0;
  flex: 1;
  box-sizing: border-box;
  padding: 0 15px;
  height: 30px;
}

.search-input-placeholder{
  color: #ccc
}

.search text{
  color: #fff;
  font-size: 12px;
}

.back{
  width: 7px;
  height: 13px
}

.hot-top{
  margin-left: 10px;
  /* background-color: green; */
}

.hot-top text{
  font-size: 12px;
  color: #fff;
}

.hot-bottom{
  flex: 1;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap
}

.hot-bottom .hot-search-cell{
  /* flex: 1; */
  background-color: #fff;
  margin-top: 10px;
  margin-left: 10px; 
  padding: 5px 10px;
  border-radius: 5px;
  display: flex;
  align-items: center;
  justify-content: center; 
  height: 30px;
  width: 100px; 
  box-sizing: border-box;
}

.hot-bottom .hot-search-cell text{
  font-size: 12px;
  color: #333;
}