/* pages/address/address.wxss */

.container {
  align-items: left;
  /* justify-content: left; */
  padding: 0;
  display: block;
  height:100vh;
}

.letter-wrapper{
  position: fixed; 
  right: 15px;
  top: 0;
  z-index: 100;
  flex-direction: column;
  display: flex;
  justify-content: center; 
  align-items: center
}

.letter-wrapper .letter-wrapper-cell{
  /* background: yellow; */
  /* height: 23px; */
  text-align: center;
  display: flex;
}

.letter-wrapper .letter-wrapper-cell text{
  font-size: 12px;
  padding: 3px 5px;
}

.address-cell {
  width: 100%;
}

.address-cell .address-cell-title {
  background: #ccc;
  /* padding: 10px 0 10px 10px; */
  height: 50px;
  display: flex;
  align-items: center;
  padding: 0 0 0 10px;
}

.address-cell .address-cell-info {
  /* padding: 0 5px; */
}

.address-cell .address-cell-info .address-city-cell {
  padding: 10px 0 10px 5px;
  border-bottom: 1px solid #ccc;
  align-items: center;
  justify-content: left;
  display: flex;
}

.address-cell .address-cell-info .address-city-cell image {
  width: 40px;
  height: 40px;
  border-radius: 20px;
}


.address-cell .address-cell-info .address-city-cell text {
  font-size: 16px;
  margin-left: 10px;
}
