/* pages/invitation/invitation.wxss */
.container{
  padding: 0;
}

.invitation-wrapper{
  display: flex;
  flex-wrap: wrap;
}

.invitation-cell{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center
}

.invitation-cell image{
  width: 60px;
  height: 60px;
}

.invitation-cell text{
  font-size: 14px;
  margin-top: 5px;
}

.info-wrapper{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20px;
}

.info-wrapper text{
  font-size: 13px;
  color: #666;
}

.info-wrapper image{
  width: 140px;
  height: 140px;
  margin-top: 20px;
}