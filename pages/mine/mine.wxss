/* pages/mine/mine.wxss */

.header{
  height: 80px;
  background: #FF6100;
  padding: 0 10px;
  display: flex;
}

.header .header-textView{
  align-items: center;
  justify-content: center; 
  flex-direction: column;
  display: flex;
  font-size: 16px;
  color: #fff;
}

.header image{
  width: 70px;
  height: 70px;
  border-radius: 35px;
  margin-top: 5px;
  margin-right: 10px;
}

.header-right{
   flex: 1; 
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;  
  /* justify-self: flex-end;  */
}

.header .header-right .header-right-img{
  width: 8px;
  height: 13px;
}

.order-container {
  height: 70px;
  background-color: #fff;
  display: flex;
}

.order-container-cell {
  flex: 1;
  display:flex; 
  font-size: 14px;
  align-items: center;
  justify-content: center; 
  flex-direction: column;
}

.order-container-cell image {
  width: 44px;
  height: 32px;
  margin-bottom: 5px;
}
