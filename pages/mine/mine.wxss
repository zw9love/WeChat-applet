/* pages/mine/mine.wxss */

.header{
  height: 80px;
  background: #FF6100;
  padding: 0 10px;
  display: flex;
  align-items: center;
}

.header .header-textView{
  align-items: center;
  justify-content: center; 
  flex-direction: column;
  display: flex;
  font-size: 16px;
  color: #fff;
  background-color: transparent;
  /* height: 20px */
}

.header .header-textView::after{
  border: none;
}

.header image{
  width: 70px;
  height: 70px;
  border-radius: 35px;
  margin-top: 5px;
  margin-right: 10px;
}

.header-right{
   flex: 1; 
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;  
  /* justify-self: flex-end;  */
}

.header .header-right .header-right-img{
  width: 8px;
  height: 13px;
}

.userInfo{
  height: 60px;
  background-color: #FF6100;
  position: relative;
}

.userInfo-wrapper{
  position: absolute;
  left:0;
  top:0;
  width: 100%;
  height: 100%;
  background-color: rgba(255,255,255,.2);
  display: flex;
    /* align-items: center;
  justify-content: center;  */
  flex-direction: row;
}

.userInfo-cell{ 
  flex-direction: column;
  display: flex;
  align-items: center;
  justify-content: center;  
  flex: 1;
  color: #fff;
  font-size: 12px;
  position: relative
}

.userInfo-cell-line{
  position: absolute;
  width: 1px;
  height: calc(100% - 6px);
  background: #fff;
  right: 0;
  top: 3px;
}

.order-container {
  height: 70px;
  background-color: #fff;
  display: flex;
}

.order-container-cell {
  flex: 1;
  display:flex; 
  font-size: 12px;
  align-items: center;
  justify-content: center; 
  flex-direction: column;
}

.order-container-cell image {
  width: 30px;
  height: 22px;
  margin-bottom: 5px;
}
